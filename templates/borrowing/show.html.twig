{% extends 'base.html.twig' %}

{% block title %}Emprunt{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/show_entity.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1 class="my-4">Emprunt</h1>

    <table class="table text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ borrowing.id }}</td>
            </tr>
            <tr>
                <th>Date d'Emprunt</th>
                <td>{{ borrowing.startDate ? borrowing.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date Retour Attendue</th>
                <td>{{ borrowing.expectedReturnDate ? borrowing.expectedReturnDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date Retour Effective</th>
                <td>{{ borrowing.effectiveReturnDate ? borrowing.effectiveReturnDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions my-3">
        <a href="{{ path('borrowing_edit', {'id': borrowing.id}) }}" type="btn" class="btn btn-success">Editer</a>
        {{ include('borrowing/_delete_form.html.twig') }}
        <a href="{{ path('borrowing_index') }}" type="btn" class="btn btn-outline-secondary">Retour Ã  la liste</a>
    </div>
{% endblock %}
