{% extends 'base.html.twig' %}

{% block title %}Liste des Emprunts{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Emprunts</h1>

    <table class="table text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date de début</th>
                <th>Date de retour attendu</th>
                <th>Date de retour officieuse</th>
                <th>Titre du produit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for borrowing in borrowings %}
            <tr>
                <td>{{ borrowing.id }}</td>
                <td>{{ borrowing.startDate ? borrowing.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ borrowing.expectedReturnDate ? borrowing.expectedReturnDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ borrowing.effectiveReturnDate ? borrowing.effectiveReturnDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ borrowing.document }}</td>
                <td>
                    <a href="{{ path('borrowing_show', {'id': borrowing.id}) }}" type="btn" class="btn btn-info">Voir</a>
                    <a href="{{ path('borrowing_edit', {'id': borrowing.id}) }}" type="btn" class="btn btn-success">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune entitée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('borrowing_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>
{% endblock %}


