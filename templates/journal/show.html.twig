{% extends 'base.html.twig' %}

{% block title %}Journal{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/show_entity.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1 class="my-4">Journal</h1>

    <table class="table text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ journal.id }}</td>
            </tr>
            <tr>
                <th>Periodicité</th>
                <td>{{ journal.periodicity }}</td>
            </tr>
            <tr>
                <th>Date Souscription</th>
                <td>{{ journal.subscriptionDate ? journal.subscriptionDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions my-3">
        <a href="{{ path('journal_edit', {'id': journal.id}) }}" type="btn" class="btn btn-success">Editer</a>
        {{ include('journal/_delete_form.html.twig') }}
        <a href="{{ path('journal_index') }}" type="btn" class="btn btn-outline-secondary">Retour à la Liste</a>
    </div>
{% endblock %}
