{% extends 'base.html.twig' %}

{% block title %}Adhésion{% endblock %}

{% block body %}
    <h1 class="my-4">Adhésion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
                <th>Pseudo</th>
                <td>{{ member.nickName }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ member.passwd }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ member.firstName }}</td>
            </tr>
            <tr>
                <th>Nom de famille</th>
                <td>{{ member.lastName }}</td>
            </tr>
            <tr>
                <th>MembershipDate</th>
                <td>{{ member.membershipDate ? member.membershipDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('member_index') }}" type="btn" class="btn btn-outline-secondary my-3">Retour à la Liste</a>

    <a href="{{ path('member_edit', {'id': member.id}) }}">Editer</a>

    {{ include('member/_delete_form.html.twig') }}
{% endblock %}
