{% extends 'base.html.twig' %}

{% block title %}Evénement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/show_entity.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1 class="my-4">Evénement</h1>

    <table class="table text-center">
        <tbody>
            <tr>
                                <td>{{ meet_up.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ meet_up.date ? meet_up.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    
    <div class="actions my-3">
        <a href="{{ path('meet_up_edit', {'id': meet_up.id}) }}" type="btn" class="btn btn-success">Editer</a>
        {{ include('meet_up/_delete_form.html.twig') }}
        <a href="{{ path('meet_up_index') }}" type="btn" class="btn btn-outline-secondary">Retour à la Liste</a>
    </div>
{% endblock %}
