{% extends 'base.html.twig' %}

{% block title %}Liste des Participations{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Participations</h1 class="my-4">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BookingPlaces</th>
                <th>AvailablePlaces</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participate in participates %}
            <tr>
                <td>{{ participate.id }}</td>
                <td>{{ participate.bookingPlaces }}</td>
                <td>{{ participate.availablePlaces }}</td>
                <td>
                    <a href="{{ path('participates_show', {'id': participate.id}) }}">Voir</a>
                    <a href="{{ path('participates_edit', {'id': participate.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune entit√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('participates_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>
{% endblock %}
