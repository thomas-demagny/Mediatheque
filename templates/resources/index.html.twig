{% extends 'base.html.twig' %}

{% block title %}Liste des Ressources{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/crud_index.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Ressources</h1>

    <a href="{{ path('resources_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>
    
    <table class="table text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resource in resources %}
            <tr>
                <td>{{ resource.id }}</td>
                <td>{{ resource.url }}</td>
                <td>{{ resource.type }}</td>
                {% include "layout/crudActions.html.twig" with {'crudName': 'resources', 'crudElement': resource} %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune entit√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
