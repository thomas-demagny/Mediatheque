{% extends 'base.html.twig' %}

{% block title %}MeetUp index{% endblock %}

{% block body %}
    <h1>MeetUp index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dates</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meet_up in meet_ups %}
            <tr>
                <td>{{ meet_up.id }}</td>
                <td>{{ meet_up.date ? meet_up.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('meet_up_show', {'id': meet_up.id}) }}" type="btn" class="btn btn-info">Voir</a>
                    <a href="{{ path('meet_up_edit', {'id': meet_up.id}) }}" type="btn" class="btn btn-success">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('meet_up_new') }}">Create new</a>
{% endblock %}
