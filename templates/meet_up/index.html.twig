{% extends 'base.html.twig' %}

{% block title %}Liste des Evénements{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Evénements</h1>

    <table class="table text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meet_up in meet_ups %}
            <tr>
                <td>{{ meet_up.id }}</td>
                <td>{{ meet_up.date ? meet_up.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('meet_up_show', {'id': meet_up.id}) }}" type="btn" class="btn btn-info">Voir</a>
                    <a href="{{ path('meet_up_edit', {'id': meet_up.id}) }}" type="btn" class="btn btn-success">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune entitée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('meet_up_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>
{% endblock %}
